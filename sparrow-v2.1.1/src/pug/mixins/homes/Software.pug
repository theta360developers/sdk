mixin SoftwareHeader
  +Section.text-center.mt-5.mt-lg-0#software-header
    .row.justify-content-center.align-items-center
      .col-lg-8
        .player-wrapper(data-zanim-xs!={delay: 0.1, animation: 'zoom-in'} data-zanim-trigger='scroll')
          .player(data-plyr data-plyr-provider='youtube' data-plyr-embed-id='bTqVqk7FSmY')
        h1.overflow-hidden.mt-4 welcome to 
          br.d-sm-none
          span.typed-text.fst-italic.font-base.fw-light(data-typed-text!=["productivity.", "workflow.", "organization."])
        p.font-sans-serif The platform for your ideas, your team, your projects, your business.
        a(href='#!').btn.btn-outline-dark.rounded-pill.mt-4 Buy Now
        

mixin SoftwareTestimonial
  +Section.bg-light.py-7.py-lg-9#softwareTestimonial
    mixin SoftwareTestimonialContent(preson, companey, content)
      blockquote.blockquote(data-zanim-xs!={delay: 0.1} data-zanim-trigger='scroll')
        p.blockquote-content!=content
        .h6.fs-0.fw-black=preson
        .h6.text-500=companey
    .row.justify-content-center
      .col-lg-9
        .row.align-items-center.mb-7
          .col-sm-auto
            .mx-auto.ms-sm-0.mb-4.mb-sm-0
              img(src=`${CWD}assets/img/team/12.jpg` alt="").avatar.avatar-egg
          .col.ps-5
            +SoftwareTestimonialContent('Black Beard', 'Feast Design Company', 'Sparrow helped me transform my hobby into a successful online business. Their products enabled me to focus on creating top-notch solutions for my clients.')

        .row.align-items-center.mb-7
          .col-sm-auto.order-lg-2
            .mx-auto.ms-sm-0.mb-4.mb-sm-0
              img(src=`${CWD}assets/img/team/10.jpg` alt="").avatar.avatar-egg
          .col.ps-5
            +SoftwareTestimonialContent('Rebecca Gill', 'Web Savvy Marketing', 'Sparrow blends together the best elements. It offers the power of bootstrap with useful extensions, and includes the most elegant typographic features&mdash;which makes developers like me incredibly happy.')

        .row.align-items-center
          .col-sm-auto
            .mx-auto.ms-sm-0.mb-4.mb-sm-0
              img(src=`${CWD}assets/img/team/11.jpg` alt="").avatar.avatar-egg
          .col.ps-5
            +SoftwareTestimonialContent('Lisa Hannigan', 'Problogger', 'The team behind sparrow sure know what they are doing! If you’re looking for managed hosting you’ll find a stable, secure and well optimized option in sparrow Sites.')
            

mixin SoftwareFeatures
  +Section.text-center#SoftwareFeatures
    .row.justify-content-between
      mixin ZenFeature(img, title, des)
        img(src=img alt="" data-zanim-xs!={delay: 0.1, animation: "zoom-in"}).rounded-3.img-fluid
        .overflow-hidden
          h4.mt-4(data-zanim-xs!={delay: 0.2})=title
        .overflow-hidden
          p(data-zanim-xs!={delay: 0.3})=des

      .col-lg-6.px-lg-6(data-zanim-timeline!={delay: 0.1} data-zanim-trigger="scroll")
        +ZenFeature(`${CWD}assets/img/illustration/01.jpg`, "The Power of Simplicity", "Start simple. When you use a tool, you should be able to understand it from the first moment. With sparrow you manage any web design project intuitively.")
      .col-lg-6.px-lg-6.pt-6.pt-lg-0(data-zanim-timeline!={delay: 0.2} data-zanim-trigger="scroll")
        +ZenFeature(`${CWD}assets/img/illustration/02.jpg`, "The Power of Choice", "The ability to switch perspective lets you see clearly, and to know where to take the next step. With sparrow, you can work on a portfolio, business website, or shop.")
      .col-lg-6.px-lg-6.pt-6(data-zanim-timeline!={delay: 0.3} data-zanim-trigger="scroll")
        +ZenFeature(`${CWD}assets/img/illustration/03.jpg`, "The Power of Growth", "We all grow and evolve, and our environment and tools should grow with us. A system switch can be a very expensive and risky undertaking. Sparrow can give you almost unlimited support in your structures and processes.")
      .col-lg-6.px-lg-6.pt-6(data-zanim-timeline!={delay: 0.4} data-zanim-trigger="scroll")
        +ZenFeature(`${CWD}assets/img/illustration/04.jpg`, "The Power of Synergy", "Everything is connected. Wherever you have related sections stored in separate pages, you lose control over the design. With sparrow you can easily join any section to create a simple, yet powerful website.")

